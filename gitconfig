[core]
    filemode = true
    ignorecase = false
    excludesfile = /opt/boxen/config/git/gitignore

[user]
    name = Jan Krause
    email = jan.krause@wywy.com

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto
    pager = true


[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[core]
    pager = less -FRSX
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = /opt/boxen/config/git/gitignore

[gc]
    auto = 1

[merge]
    summary = true

[push]
    default = current

[alias]
    cp = cherry-pick -x
    b = branch -v
    r = remote -v
    t = tag -l
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    unstage = reset HEAD
    uncommit = reset --soft HEAD^

[branch "master"]
    remote = origin
    merge = refs/heads/master
    rebase = true

[hub]
    protocol = https

[credential]
    helper = /opt/boxen/bin/boxen-git-credential
